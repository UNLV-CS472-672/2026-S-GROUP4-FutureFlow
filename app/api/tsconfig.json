/* Tells TypeScript compiler how to compile the package [
i.e where src code is, where compiled files should go, etc] */

{
    "extends": "../../tsconfig.base.json", // Inherit base TypeScript configuration from the root tsconfig.base.json
    "compilerOptions": { // Specific compiler options for this package
        "outDir": "dist", // Directory where compiled JavaScript files will be output
        "rootDir": "src" // Directory where the source TypeScript files are located
    },
    "include": ["src"] // Include all TypeScript files in the src directory for compilation
}